{
	"dependencies": {
		"@opencode-ai/sdk": "^0.3.123",
		"discord.js": "^14.21.0",
		"dotenv": "^17.2.1",
		"effect": "^3.17.6",
		"sunar": "^0.6.1"
	},
	"description": "A template for creating Discord bots with vibe coding.",
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/bun": "^1.2.19",
		"esbuild": "^0.25.8"
	},
	"name": "opencode-discord",
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"format": "biome format",
		"build": "bun --bun esbuild ./src/**/*.ts --outdir=dist --platform=node",
		"start": "bun run build && bun --bun dist/main.js"
	}
}
